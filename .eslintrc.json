{
  "root": true, // sais this is in the root, don't go up further looking for other eslint files
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
    // "plugin:angular/johnpapa"
  ],
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "jasmine": true
  },
  "rules": {
    // ** Rule OVerrides
    // 0 = off, 1 = warning, 2 = error (breaks the build)
    "no-console": 1
  }
}
